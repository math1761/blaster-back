{
  "name": "blastar-server",
  "version": "0.1.0",
  "description": "Blastar back-end",
  "repository": {
    "type": "git",
    "url": "https://github.com/math1761/blaster-back"
  },
  "author": "Mathieu Levi",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "DEBUG=* concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "npm run build && npm run watch-debug"
  },
  "dependencies": {
    "@types/socket.io": "^2.1.4",
    "body-parser": "1.19.0",
    "cors": "^2.8.5",
    "dotenv": "8.2.0",
    "errorhandler": "1.5.1",
    "express": "^4.17.1",
    "fbgraph": "1.4.4",
    "helmet": "^3.21.2",
    "mongoose": "^5.8.11",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-local": "^1.0.0",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/helmet": "0.0.45",
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "0.0.32",
    "@types/eslint": "^6.1.1",
    "@types/express": "4.17.2",
    "@types/jest": "25.1.1",
    "@types/mongoose": "5.7.0",
    "@types/node": "^12.7.8",
    "@types/passport": "1.0.2",
    "@types/passport-facebook": "2.1.9",
    "@types/passport-local": "1.0.33",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "concurrently": "^4.1.2",
    "eslint": "^6.4.0",
    "jest": "25.1.0",
    "nodemon": "^1.19.2",
    "ts-jest": "25.1.0",
    "ts-node": "8.6.2",
    "typescript": "^3.6.3",
    "winston": "^3.2.1"
  }
}
